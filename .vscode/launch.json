{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "compounds": [
        {
            "name": "Compound",
            "configurations": [
                "Chrome",
                "Api"
            ],
            "stopAll": true
        }
    ],
    "configurations": [
        {
            "name": "Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/web/app/scripts",
            "sourceMaps": true,
            // "sourceMapPathOverrides": {
            //     "webpack:///./*": "${webRoot}/ts/*"
            // }        
        },
        {
            "request": "launch",
            "name": "Api",
            "type": "node",
            "program": "${workspaceFolder}/main.ts",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "-A",
                "--inspect-wait",
                "--unstable-kv"
            ],
            "attachSimplePort": 9229,
            "preLaunchTask": "tsc"
        },
        {
            "name": "Web",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8000",
            "webRoot": "${workspaceFolder}/web/app/scripts",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///./*": "${webRoot}/ts/*"
            }
        },
        {
            "name": "Debug Deno Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/test.ts",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "test",
                "--inspect-brk",
                "--no-check",
                "-A"
            ],
            "attachSimplePort": 9229,
            "cwd": "${workspaceFolder}",
            "outputCapture": "std",
        }
    ]
}